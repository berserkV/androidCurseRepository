            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".viewPagerFormActivity.FormActivity">
            android:name=".emailActivity.EmailActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>